@model List<AISummariseApplication.Models.BlogModel>

<h1>Blog Posts</h1>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">@post.URL</h2>
                        <p class="card-text">@post.Summary</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No blog posts available.</p>
}